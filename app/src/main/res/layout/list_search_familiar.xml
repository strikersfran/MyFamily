<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ls_imagen_user"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:clickable="true"
            android:padding="2dp"
            android:src="@drawable/tablet"
            card_view:civ_border_color="@color/primary_color"
            card_view:civ_border_width="1dp" />

        <TextView
            android:id="@+id/ls_nombre_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ls_imagen_user"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="2dp"
            android:text="@string/usuario"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ls_apellidos_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/ls_imagen_user"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingLeft="2dp"
            android:text="@string/usuario"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ls_btn_agregar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/border_gris"
            card_view:srcCompat="@drawable/ic_agregar_familiar" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

